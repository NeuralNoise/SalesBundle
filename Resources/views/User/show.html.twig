{% extends "::base.html.twig" %}

{% use 'TerraMarSalesBundle:User:_subnav.html.twig' %}

{% block title %}{{ entity }}{% endblock %}

{% block subheader %}
<div class="pull-right">
    <a class="btn" href="{{ path('orkestra_user_edit', { id: entity.id }) }}"><i class="icon-edit"></i> Edit User</a>
</div>
{% endblock %}

{% block content %}
    {% render 'TerraMarSalesBundle:OfficeUser/Alert:index' with { id : entity.id } %}
    <hr>
    {% render 'TerraMarSalesBundle:OfficeUser/ToDo:index' with { id : entity.id } %}
    <hr>
    {% render 'TerraMarSalesBundle:OfficeUser/Note:index' with { id : entity.id } %}
    <hr>
    {% render 'TerraMarSalesBundle:OfficeUser/AlertHistory:index' with { id : entity.id } %}
{% endblock %}
