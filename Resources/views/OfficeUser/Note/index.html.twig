<div class="row">
    <div class="columns">
        <h3><i class="icon-header icon-note"></i> Notes</h3>
    </div>
    <a href="{{ path('officeuser_note_new', { id : entity.id }) }}" class="fancyajax btn btn-primary pull-right"><i class="icon icon-add"></i> Add Note</a>
</div>
<div class="spacer"></div>
{% if entities|length > 0 %}
<table class="table records_list">
    <thead>
        <tr>
            <th>Date Created</th>
            <th>Summary</th>
            <th>Body</th>
            <th>Created By</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.dateCreated.format('m/d/y') }}</td>
            <td><b>{{ entity.summary }}</b></td>
            <td>{{ entity.body }}</td>
            <td>{{ entity.createdBy }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
    <h4>No notes.</h4>
    <div class="spacer"></div>
{% endif %}
