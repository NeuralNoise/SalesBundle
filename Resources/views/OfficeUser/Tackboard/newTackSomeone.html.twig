    <div id="tack_user_create_alert" class="alert-box error"></div>
    <div class="row ">
        <div class="columns">
            <h3>Post to another Tackboard</h3>
        </div>
    </div>
    <form id="tack_user_create" action="{{ path('tack_user_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="row">
            <div class="columns">
                {{ form_row(form.assignedTo, { 'attr' : { 'class' : 'input-medium' } }) }}
            </div>
        </div>
        <div class="row">
            <div class="columns">
                <label>Alert Type</label>
                {{ form_widget(form.alertType, { 'attr' : { 'class' : 'input-small alertType' } }) }}
            </div>
        </div>

        <div class="row">
            <div class="columns">
                {{ form_row(form.name, { 'attr' : { 'class' : 'input-medium' } }) }}
            </div>
        </div>
        <div class="row">
            <div class="columns">
                {{ form_row(form.description, { 'attr' : { 'class' : 'input-xlarge' } }) }}
            </div>
        </div>
        <div class="row">
            <div class="columns">
                {{ form_row(form.alertPriority, { 'attr' : { 'class' : 'input-small' } }) }}
            </div>
        </div>
        <div class="row dueDateRow" style="display:none;">
            <div class="columns">
                {{ form_row(form.dueDate, { 'attr' : { 'class' : 'input-small datepicker' } }) }}
            </div>
        </div>
        <div class="spacer"></div>
        <div class="row">
            {{ form_rest(form) }}
            <div class="columns">
                <button class="btn btn-primary" type="submit">Create Post</button>
            </div>
        </div>

    </form>


    <script type="text/javascript">
        $(function() {
            $('.datepicker').datepicker();
            $('#tack_user_create').validate({
                errorLabelContainer: '#tack_user_create_alert'
            });
            $('.alertType').change(function() {
                var type =$('select.alertType').val();
                if (type == 'ToDo') {
                    $('.dueDateRow').show();
                } else {
                    $('.dueDateRow').hide();
                }
            });
        });
    </script>


